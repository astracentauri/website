---
import Layout from "../layouts/Layout.astro";
import Welcome from "../components/Welcome.astro";
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import Astrophotography from "../components/Astrophotography.astro";
import Landscapes from "../components/Landscapes.astro";
import Equipment from "../components/Equipment.astro";
import Projects from "../components/Projects.astro";
import Theme from "../components/Theme.astro";
import Copyright from "../components/Copyright.astro";
---

<Layout title="Astra Centauri">
  <main class="bento">
    <div class="welcome"><Welcome /></div>
    <div class="about"><About /></div>
    <div class="contact"><Contact /></div>
    <div class="landscapes"><Landscapes /></div>
    <div class="astrophotography"><Astrophotography /></div>
    <div class="equipment"><Equipment /></div>
    <div class="projects"><Projects /></div>
    <div class="theme"><Theme /></div>
    <div class="copyright"><Copyright /></div>
  </main>
</Layout>

<style>
  .bento {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    grid-auto-rows: minmax(100px, auto);
    gap: 10px;
  }

  .bento div {
    border: 1px solid rgb(150, 50, 225);
    border-radius: 10px;
    background-image: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.75),
      rgba(25, 25, 50, 0.75)
    );
  }
  .bento div:is(:hover) {
    border-color: rgb(255, 255, 255);
  }

  .welcome {
    grid-column: 1/7;
    grid-row: 1/4;
    background-image: url("example.jpg");
  }
  .about {
    grid-column: 7/9;
    grid-row: 1/5;
  }
  .contact {
    grid-column: 1/3;
    grid-row: 4/7;
  }
  .landscapes {
    grid-column: 3/5;
    grid-row: 4/6;
  }
  .astrophotography {
    grid-column: 5/7;
    grid-row: 4/6;
  }
  .equipment {
    grid-column: 3/5;
    grid-row: 6/7;
  }
  .projects {
    grid-column: 5/7;
    grid-row: 6/7;
  }
  .theme {
    grid-column: 7/9;
    grid-row: 5/6;
  }
  .copyright {
    grid-column: 7/9;
    grid-row: 6/7;
  }
</style>
