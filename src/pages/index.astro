---
import Layout from "../layouts/Layout.astro";
import Module from "../components/Module.astro";
---

<Layout title="Astra Centauri">
    <main class="bento-grid">
        <Module title="Welcome" body="This is a module example. " />
        <Module title="About" body="This is another module example." />
        <Module title="Contact" body="This is another module example." />
        <Module title="Portfolio" body="This is another module example." />
    </main>
  </Layout>

<style>
    .bento-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      grid-auto-rows: minmax(150, auto);
      gap: 10px;
      max-width: 1000px; /* Ajustez selon vos besoins */
      margin: 0 auto; /* Centre la grille horizontalement */
    }
</style>
  